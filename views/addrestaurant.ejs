<html>
<title>Login Page</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href='/stylesheets/w3css.css'>
<script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwd_gx59uMIyQGnkwHjqxp54phbW4bwYI">
</script>
<script type="text/javascript" src="/javascripts/addRestaurant.js"></script>
<script type="text/javascript" src="/javascripts/jquery.js"></script>
<script type="text/javascript" src="/javascripts/imageupload.js"></script>

<body class="w3-light-grey">
<!-- Top container -->
<div class="w3-bar w3-top w3-black w3-large" style="z-index:4">
    <a href="/" class="w3-bar-item w3-button w3-hover-none w3-hover-text-light-grey">Back</a>
    <span class="w3-bar-item w3-right"><b>Restaurant</b>Advisor</span>
</div>

<div class="w3-main w3-row-padding" style="margin-top:100px;" >
    <div class="w3-col l3 m2"><p></p></div>
    <form class="w3-col l6 m8 s12" onsubmit="event.preventDefault(); addRestaurant();">
        <p>
            <label>Restaurant Name (Required) :</label>
            <input class="w3-input" type="text" name="name" id="name" required></p>
        <p>
            <label>Address (Required) :</label>
            <input class="w3-input" type="text" name="address" id="address" required></p>
        <p>
            <label>Postcode (Required) :</label>
            <input class="w3-input" type="text" name="postcode" id="postcode" required></p>
        <p>
            <label>Borough (Required) :</label>
            <input class="w3-input" type="text" name="borough" id="borough" required></p>
        <p>
            <label>Cuisine (Required) :</label>
            <input class="w3-input" type="text" name="cuisine" id="cuisine" required></p>
        <p>
            <label>Description :</label>
            <input class="w3-input" type="text" name="description" id="description" ></p>
        <p>
            <label>Phone :</label>
            <input class="w3-input" type="number" name="phone" id="phone" ></p>
        <p>
            <label>Features :</label>
            <input class="w3-input" type="text" name="features" id="features" ></p>
        <p>
            <label>Open Hours:</label>
            <input class="w3-input" type="text" name="openhours" id="openhours" ></p>
        <p>
        <div class="w3-margin-top">
            <label>Take or choose a picture (Required) :</label>
            <br>
            <br>
            <div class="w3-button w3-green" id="openvedio" onclick=opencemera()>opencemera</div>
            <input class="w3-margin-left" id="comment_image" type="file" accept="image/*" onclick=upload_iamge() required>
        </div>

        <hr>
        <div id="videodiv">
            <video autoplay id="videoplay" title="click for taking a photo" width="0", height="0"></video>
        </div>
        <canvas id="show_image" style="max-height: 300px" width="1" height="1"></canvas>
        </p>
        <p>
            <label>Location (change location by clicking map)</label>
            <input type="hidden" id="longitude"/>
            <input type="hidden" id="latitude"/>
            <div class="w3-light-grey w3-small w3-margin-bottom">
                <div id="add-res-map" style="width:100%; height: 400px"></div>
            </div>
        </p>
        <p>
            <input type="submit" value="Submit" class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding">
        </p>
    </form>
</div>

<script>
    initMap();
</script>
</body>
</html>

